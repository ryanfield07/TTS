<h1>Listing marlbles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marlbles.each do |marlble| %>
      <tr>
        <td><%= marlble.name %></td>
        <td><%= marlble.color %></td>
        <td><%= marlble.person %></td>
        <td><%= link_to 'Show', marlble %></td>
        <td><%= link_to 'Edit', edit_marlble_path(marlble) %></td>
        <td><%= link_to 'Destroy', marlble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

